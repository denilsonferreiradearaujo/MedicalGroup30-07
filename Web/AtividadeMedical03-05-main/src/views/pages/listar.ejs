<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minhas Consultas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>

     <h3 class="titulo-consulta">Consultas Agendadas</h3>

    <table class="tableConsulta table-hover">
        <thead class="table-consulta">
            <tr>
                <th class="rotulo">Status</th>
                <th class="rotulo">Data</th>
                <th class="rotulo">Hora</th>
                <th class="rotulo">Especialidade</th>
                <th class="rotulo">MÃ©dico</th>
            </tr>
        </thead>
        <tbody id="consultas-tbody">
        </tbody>
    </table>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            fetch('pages/listar')  
                .then(response => response.json())
                .then(consultas => {
                    const tbody = document.getElementById('consultas-tbody');
                    consultas.forEach(item => {
                        const row = document.createElement('tr');

                        row.innerHTML = `
                            <td>${item.status}</td>
                            <td>${item.data}</td>
                            <td>${item.hora}</td>
                            <td>${item.especialidade}</td>
                            <td>${item.medico}</td>
                        `;
                        tbody.appendChild(row);
                    });
                })
                .catch(error => console.error('Erro ao buscar consultas:', error));
        });
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>