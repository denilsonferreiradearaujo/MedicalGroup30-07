<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Minhas Consultas</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>

     <h3 class="titulo-consulta">Consultas Agendadas</h3>

     <table class="tableConsulta table-hover">
        <thead class="table-consulta">
            <tr>
                <th class="rotulo">Status</th>
                <th class="rotulo">Data</th>
                <th class="rotulo">Hora</th>
                <th class="rotulo">Especialidade</th>
                <th class="rotulo">MÃ©dico</th>
                <th class="rotulo">Paciente</th>
            </tr>
        </thead>
        <tbody id="consultas-tbody">
            <% if (consultas && consultas.length > 0) { %>
                <% consultas.forEach(function(consulta) { %>
                    <tr>
                        <td><%= consulta.status %></td>
                        <td><%= consulta.data %></td>
                        <td><%= consulta.hora %></td>
                        <td><%= consulta.especialidade %></td>
                        <td><%= consulta.medico_nome %></td>
                        <td><%= consulta.paciente_nome %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6">Nenhuma consulta encontrada.</td>
                </tr>
            <% } %>
        </tbody>
    </table>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>