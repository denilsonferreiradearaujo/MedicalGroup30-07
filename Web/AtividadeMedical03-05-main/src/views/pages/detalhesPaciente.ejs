<!DOCTYPE html>
<html>
  <head>
    <title>Detalhes</title>
    <style>
      body {
        background-color: #f0f4f8; /* Cor de fundo mais clara e suave */
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .container {
        display: flex;
        justify-content: space-between;
        padding: 20px;
        gap: 20px;
      }
      .lado-esquerdo,
      .lado-direito {
        width: 68%;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
      }
      .lado-direito {
        overflow-y: auto; /* Barra de rolagem para conteúdo grande */
      }
      h1 {
        font-size: 24px;
        margin: 0;
        color: #333;
        text-align: center;
      }
      .cont-foto-esq {
        background-color: #e0e0e0;
        height: 150px;
        margin-bottom: 20px;
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .cont-dados-esq {
        margin-bottom: 20px;
      }
      label {
        font-size: 1.5em;
        font-weight: bold;
        margin-bottom: 10px;
        display: block;
        text-align: center;
        color: #333;
      }
      .dados-paciente,
      .dados-contato-paciente {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 20px;
      }
      .item {
        background-color: #fafafa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        flex: 1 1 calc(50% - 15px);
      }
      .item p {
        margin: 0;
      }
      .row01 {
        font-size: 16px;
        font-weight: bold;
        color: #333;
      }
      .row02 {
        font-size: 14px;
        color: #555;
      }
      .container_linha {
        display: flex;
        align-items: center;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 15px;
      }
      .dados_linha {
        flex: 1;
        display: flex;
        justify-content: space-between;
      }
      .botao_detalhes,
      .botao_prontuario,
      .botao_editar {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
        text-align: center;
        margin: 5px;
      }
      .botao_detalhes:hover,
      .botao_prontuario:hover,
      .botao_editar:hover {
        background-color: #0056b3;
      }
      .editar-protuario {
        margin-top: 20px;
      }
      .linha-01,
      .linha-02 {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
      }
      .caixa-01 {
        margin-top: 10px;
      }
      .caixa-texto-01,
      .caixa-texto-02 {
        width: 100%;
        height: 40px;
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 0 10px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- lado esquerdo -->
      <div class="lado-esquerdo">
        <div class="cont-foto-esq">Foto do Paciente</div>
        <div class="cont-dados-esq">
          <label>Dados do Paciente</label>
          <div class="dados-paciente">
            <div class="item nome-paciente">
              <p class="row01">Nome:</p>
              <p class="row02"></p>
            </div>
            <div class="item idade-paciente">
              <p class="row01">Idade</p>
              <p class="row02"></p>
            </div>
            <div class="item sexo-paciente">
              <p class="row01">Sexo</p>
              <p class="row02"></p>      
            </div>
          </div>
          <div class="dados-contato-paciente">
            <div class="item endereco-paciente">
              <p class="row01">Endereço</p>
              <p class="row02"></p>
            </div>
            <div class="item endereco-paciente">
              <p class="row01">Bairro</p>
              <p class="row02"></p>
            </div>
            <div class="item endereco-paciente">
              <p class="row01">Cidade</p>
              <p class="row02"></p>
            </div>
            <div class="item endereco-paciente">
              <p class="row01">Estado</p>
              <p class="row02"></p>
            </div>
            <div class="item endereco-paciente">
              <p class="row01">País</p>
              <p class="row02"></p>
            </div>
            <div class="item endereco-paciente">
              <p class="row01">CEP</p>
              <p class="row02"></p>
            </div>
            <div class="item endereco-paciente">
              <p class="row01">Email</p>
              <p class="row02"></p>
            </div>
          </div>
        </div>
      </div>

      <!-- lado direito -->
      <div class="lado-direito">
        <div class="container-historico-dir">
          <div class="container_linha">
            <button class="botao_detalhes">Detalhes</button>
            <div class="dados_linha">
              <p>Nome paciente</p>
              <p>Especialidade</p>
              <p>Nome do médico</p>
              <p>Data da consulta</p>
            </div>
            <button class="botao_prontuario">Último prontuário</button>
          </div>
        </div>
        <div class="editar-protuario">
          <label>Editar Prontuário</label>
          <div class="linha-01">
            <p>Especialidade:</p>
            <p>Consulta n.</p>
          </div>
          <div class="caixa-01">
            <div class="linha-02">
              <p>Diagnóstico</p>
              <input type="text" class="caixa-texto-01" disabled />
            </div>
            <div class="linha-02">
              <p>Medicação</p>
              <input type="text" class="caixa-texto-02" disabled />
            </div>
            <button class="botao_editar">Editar prontuário</button>
          </div>
        </div>
      </div>
    </div>
    <script src="detalhesPaciente.js"></script>
  </body>
</html>
